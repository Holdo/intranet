<View xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:u="sap.ui.unified"
      controllerName='reviewerinterface.App'>
    <u:Shell
            id="myShell"
            icon="./WildFlyLogo.png">
        <u:headItems>
            <u:ShellHeadItem
                    tooltip="Configuration"
                    icon="sap-icon://menu2"
                    press="handlePressConfiguration"/>
            <u:ShellHeadItem
                    tooltip="Home"
                    icon="sap-icon://home"
                    visible="true"
                    press="handlePressHome"/>
            <u:ShellHeadItem
                    id="shellBackButton"
                    tooltip="Back"
                    icon="sap-icon://nav-back"
                    visible="false"
                    press="handlePressBack" />
        </u:headItems>
        <u:headEndItems>
            <u:ShellHeadItem
                    icon="sap-icon://log"
                    tooltip="Logoff"
                    press="handleLogoffPress"/>
        </u:headEndItems>
        <u:user>
            <u:ShellHeadUserItem id="ShellHeadUserItem"
                                 image="sap-icon://person-placeholder"
                                 username="anonymous"
                                 press="handleUserItemPressed"/>
        </u:user>
        <u:paneContent>
        </u:paneContent>
        <Page title="Reviewer Interface">
            <content>
                <App id="rootControl">
                    <!-- VIEWS -->
                </App>
            </content>
            <footer>
                <Toolbar>
                    <ToolbarSpacer/>
                    <Text text="Čamák, Holič, Válka, Vilkoláková --- PV243 2016"/>
                    <ToolbarSpacer width="2em"/>
                </Toolbar>
            </footer>
        </Page>
    </u:Shell>
</View>